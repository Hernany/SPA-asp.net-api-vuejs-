{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "extends": [
    "standard",
    "plugin:vue/recommended"
  ],
  "settings": {
    "html/html-extensions": [
      ".html"
    ],
    "html/report-bad-indent": "error"
  },
  // required to lint *.vue files
  "plugins": [
    "standard",
    "html",
    "vue"
  ],
  "rules": {
    "no-console": "warn",
    "space-before-function-paren": "error",
    "no-extra-semi": "error",
    "no-unused-vars": "error",
    "no-multiple-empty-lines": [2, {
      "max": 1
    }]
  }
}