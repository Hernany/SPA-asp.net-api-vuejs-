{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  //"extends": "standard",
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended"
  ],
  "settings": {},
  // required to lint *.vue files
  "plugins": [
    "html"
  ],
  "rules": {
    "space-before-function-paren": "error",
    "no-console": "warn",
    "no-multiple-empty-lines": [2, {
      "max": 1
    }]
  }
}